.rooms
  display flex
  justify-content space-between
  margin-top 20px
  flex-wrap wrap
  @media screen and (min-width: 540px) and (max-width: 833px)
    justify-content center
  &__card
    position relative
    width 270px
    height 258px
    box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
    border-radius 4px
    margin-bottom 20px
    overflow hidden
    @media $phone
      width 100%
    >.slick-dotted.slick-slider
      margin-bottom 0
  &__photos
    height 151px
    overflow hidden
    >.slick-prev
      left 0px 
      &::before
        content: '\e314'
    >.slick-next 
      right 0px
      &::before
        content: '\e315'
        color transparent
    &:hover,
    &:active,
    &:focus
      >.slick-prev,
      .slick-next 
        position: absolute;
        top: 50%
        z-index 2
        cursor: pointer;
        width 42px
        height 100%
        &::before
          font-family 'Material Icons'
          opacity 1
          color white
      &::before,
      &::after
        content ""
        position absolute
        top 0
        z-index 1
        width 42px
        height 100%
        background: linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 99.99%, rgba(255, 255, 255, 0) 100%)
        transition 0.3s
      &::after
        right 0
        transform: matrix(-1, 0, 0, 1, 0, 0);
      &::before
        left 0
    >.slick-dots 
      bottom 15px 
      text-align: end
      padding-right 16px
      & li 
        width 1px
        height 1px
        z-index 4
        & button
          padding 0px
          width 0
          height 0
          &:before 
            width 7.5px
            height 7.5px
            border-radius 50%
            top: 0;
            left: 0;
            width 7.5px
            height 7.5px
            content: '';
            border 1px solid white 
            opacity: 1;
        &.slick-active button:before
          background white
          box-shadow: 0px 5px 5px rgba(31, 32, 65, 0.3)
          opacity: 1;
  &__details
    &--wrap
      margin 6px 20px 0
  &__value,
  &__rating
    display flex
    justify-content space-between
    align-items center
  &__rating
    border-top 1px solid dark_10
  &__appartment
    font-family font-Montserrat
    color dark_100
    font-size 14px
    font-weight 700
    text-transform: uppercase
  &__appartment,
  &__cost
    margin-bottom 8px
  &__num
    font-family font-Quicksand
    font-size 19px
    margin-right 5px
  &__status
    color perple
    font-size: 12px;
  &__cost 
    font-family font-Montserrat 
    font-size: 12px;
    color dark_50
    margin-right -3px
    padding-top 2px
  &__price
    font-size: 14px;
    font-weight 700
  &__reviews
    color dark_50
    margin-right -1px
    margin-top 9px
  &__reviews-amount
    font-weight 700