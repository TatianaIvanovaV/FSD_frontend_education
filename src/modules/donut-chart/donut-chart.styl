.chart
  width 50%
  @media $laptop
    margin-bottom 25px
  @media screen and (min-width: 769px) and (max-width: 992px)
    width 100%
  @media screen and (min-width: 481px) and (max-width: 768px)
    width 50% 
  @media $phone
    width 100%
  &__h2
    padding-left 7px
    margin-bottom 18px
  &__pie-chart
    display flex
    flex-wrap wrap
  &__group
    position relative
    margin-left 5px
  &__info
    position absolute
    top 22%
    left 25%
    font-weight 700
    color perple
    display flex
    flex-direction column
    align-items center
    font-size 12px
    text-transform uppercase
  &__count
    font-size 24px
    font-family font-Quicksand
  &__legend 
    padding 30px 0 0 28px
  &__legend-item svg
    margin-right 5px