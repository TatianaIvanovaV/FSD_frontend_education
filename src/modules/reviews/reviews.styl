.reviews
  padding-top 13px
  &__titie
    display flex
    justify-content space-between
  &__quantity
    padding-top 3px
  &__item
    display flex
    justify-content space-between
    padding-top 17px
    margin-bottom 7px
  &__avatar
    width 58px
    >img
      position relative
      bottom 11px
      right 21px
  &__like
    display flex
    align-items center
    position relative
    bottom 35px
    left 2px
    background white
    width: 40px;
    height: 20px;
    border-radius 10px
    border: 1px solid dark_25
    cursor pointer
    color dark_25
    &:active .reviews__icon
      font-size 20px
      padding-left 2px
      margin-right 0px
    &--active
      color perple
      border solid 1px transparent
      background linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 0)), perple-gradient
      background-origin border-box
      background-clip content-box, border-box
      box-shadow 0px 1000px 0px #fff inset
  &__icon
    font-size 10px
    padding-left 6px
    margin-right 5px
  &__like-num
    font-size 10px
  &__name
    text-transform none
    font-size 14px
  &__p
    margin 10px 0 0

