.checkbox
  &__h3
    margin-bottom 12px
  &__list
    padding-left 30px
  &__item
    &--rules
      line-height 18px
      margin-bottom 12px
    &--access
      margin-bottom 10px
    &--add
      margin-bottom 6.3px
  &__lebel-title
    font-size 14px
    text-transform none
    margin-top -4px
    color dark_75
  &__sublabel
    margin-top 2px
    margin-bottom 0px
    &--access
      line-height 14px
      font-size 12px
  &__input
    display none
    & + .checkbox__label 
      position: relative;
      cursor: pointer;
      &::before 
        content: '';
        position: absolute;
        top: 0px;
        left: -30px;
        width: 20px;
        height: 20px;
        border 1px solid dark_25
        border-radius 4px
    &:checked + .checkbox__label
      &::before 
        border 1px solid perple
      &::after 
        content: '';
        position: absolute;
        top: 5px;
        left: -23px;
        width 6px
        height 8px
        border-bottom 2px solid perple
        border-right 2px solid perple
        transform: rotate(45deg)
  &__details[open] summary::after 
    transform rotate(-180deg)
    transition .3s
  &__summary
    position: relative;
    list-style none
    display: flex;
    justify-content space-between
    align-items: center;
    cursor: pointer;
    margin-bottom 10px
    &::after
      content: '\e313';
      position: absolute;
      top: 0px;
      right: 8px;
      font-family: 'Material Icons';
      font-size 24px
      transition .3s
    &::-webkit-details-marker
      display: none
    &:hover,
    &:active,
    &:focus
      outline none