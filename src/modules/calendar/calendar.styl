.datepicker
  font-family font-Montserrat
  font-size 12px
  font-weight 400
  border: 1px solid rgba(31, 32, 65, 0.25);
  box-sizing: border-box;
  box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05);
  color dark_50
  padding 20px
  &--pointer
   visibility hidden
  &--nav-action,
  &--button
    color perple
    &:hover,
    &:active,
    &:focus
      opacity 0.5
      color perple
      background none
  &--buttons,
  &--nav
    border none
  &--button
    font-weight 700
    text-transform uppercase
    justify-content flex-start
  &--button[data-action="hide"]
    justify-content flex-end
  &--nav-title,
  &--nav-title i
    font-family font-Sans
    font-weight 700
    font-size 19px
    color dark_100
    text-transform none
    &:hover,
    &:active,
    &:focus
      background none
  &--nav-title i
    font-family font-Quicksand
  &--day-name
    font-weight 700
    color perple
    text-transform none
  &--cell
    border-radius 22px
    &.-current-
      font-weight 700
      color white/*background perple-gradient*/
      background green-gradient
    &.-current-.-in-range-.-focus-
      color white
    &.-in-range-
      background linear-gradient(180deg,rgba(188,156,255,.25),rgba(139,164,249,.25))
      color dark_50
      border-radius 0
    &.-in-range-.-focus-
      background linear-gradient(180deg,rgba(188,156,255,.5),rgba(139,164,249,.5))
    &.-range-from-,
    &.-range-to-
      border-radius: 22px 0 0 22px
      background perple-gradient
      font-weight 700
      &:hover
        background perple-gradient
    &.-range-to-
      border-radius: 0 22px 22px 0
    &.-selected-.-current- 
      color white
      background perple-gradient



  &--cell-day.-other-month-, 
  &--cell-year.-other-decade- 
    color dark_25
  

