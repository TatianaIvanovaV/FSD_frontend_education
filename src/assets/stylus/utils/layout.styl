@import "utils/normalize.styl"
@import "utils/fonts.styl"
@import "utils/vars.styl"
@import "utils/media.styl"


html 
  font-size 14px
  line-height 24px
	color dark_75
  height 100%
  /*@media screen and (max-width: $desktopWidth)
		font-size 16px
  @media screen and (max-width: $tableWidth) 
		font-size 15px
  @media screen and (max-width: $phoneWidth) 
		font-size 14px*/
body
  padding 0
  font-family font-Montserrat
  font-weight 400
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background white
  color dark_50
*
*:before
*:after 
  box-sizing border-box
h1,
h2,
h3,
h4,
h5,
h6 
  margin 0
  font-family font-Sans
  color dark_100
a 
  text-decoration none
  color dark_50
ul
li 
  margin 0
  padding 0
  list-style-type none
*section
.section 
  position relative
.wrapper 
  display flex
  flex-direction column
  margin 0 auto
  min-height 100vh
.container 
  width 100%
  max-width 1160px
  margin 0 auto
  position relative
.material-icons 
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  font-size 24px
  display inline-block
  line-height 1
  text-transform none
  letter-spacing normal
  word-wrap normal
  white-space nowrap
  direction ltr
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  -moz-osx-font-smoothing grayscale
  font-feature-settings 'liga'
h1
  font-size 24px
  line-height 30px
h2
  font-size 19px
h3
  font-family font-Montserrat
  font-size 12px
  font-weight 700
  text-transform uppercase
