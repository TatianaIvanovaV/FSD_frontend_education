@import "utils/normalize.styl"
@import "utils/fonts.styl"
@import "utils/vars.styl"
@import "utils/media.styl"


html 
  font-size 14px
  line-height 24px
	color dark_75
  height 100%
  /*@media screen and (max-width: $desktopWidth)
		font-size 16px
  @media screen and (max-width: $tableWidth) 
		font-size 15px
  @media screen and (max-width: $phoneWidth) 
		font-size 14px*/
body
  padding 0
  font-family font-Montserrat
  font-weight 400
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background white
  color dark_50
*
*:before
*:after 
  box-sizing border-box
h1,
h2,
h3,
h4,
h5,
h6 
  margin 0
  font-family font-Quicksand
  color dark_100
a 
  text-decoration none
  color dark_50
ul
li 
  margin 0
  padding 0
  list-style-type none
*section
.section 
  position relative
.wrapper 
  display flex
  flex-direction column
  margin 0 auto
  min-height 100vh
.container 
  width 100%
  max-width 1160px
  margin 0 auto
  position relative
.material-icons 
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  font-size 24px
  display inline-block
  line-height 1
  text-transform none
  letter-spacing normal
  word-wrap normal
  white-space nowrap
  direction ltr
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  -moz-osx-font-smoothing grayscale
  font-feature-settings 'liga'
input
  &:hover,
  &:active,
  &:focus 
    outline: 0 !important
button,
.btn
  transition .3s
  cursor pointer
  &:hover,
  &:active,
  &:focus 
    outline: 0 !important
    opacity 0.5
.btn
  text-transform uppercase
  display flex
  justify-content center
  align-items center
  font-size 12px
  font-weight 700
  position relative
  height 44px
  border-radius 22px
  background perple-gradient
  >a
    color white
  &__link
    position relative
    width 100%
    text-align center
    padding-right 3px
  &__icon-arrow 
    position absolute
    right 10px
h1
  font-size 24px
  line-height 30px
h3
  font-family font-Montserrat
  font-size 12px
  font-weight 700
  text-transform uppercase
input
  height 44px 
  border 1px solid dark_25
  border-radius 4px
  padding 0px 0 0 14px
  width 100%
  &:hover,
  &:active,
  &:focus 
    border 1px solid dark_50
  &::placeholder
    color dark_25