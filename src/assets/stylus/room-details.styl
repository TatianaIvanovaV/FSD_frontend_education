.details
  border-bottom 1px solid dark_25
  &__intro
    height 485px
    display flex
    flex-direction column
    flex-wrap wrap
    margin 0
    max-width: 100vw;
    overflow hidden
    @media $tablet
      height 200px
  &__gallery
    &--main
      height 100%
      width 68.5vw 
    &--up,
    &--low
      height 50%
      >img 
        @media screen and (min-width: 481px) and (max-width: 768px)
          width 60%
        @media $phone
          width 60%
          height auto
    &--main,
    &--up,
    &--low
      overflow hidden
      margin -0.1px
      >img 
        width 100%
        height 100%
        object-fit cover
  &__columns
    padding 70px 0
    display flex
    @media $tablet
      flex-direction column-reverse
  &__columns-right
    width 38.8%
    display flex
    justify-content flex-end
    @media $tablet
      justify-content center
      margin-bottom 30px
  &__columns-left
    width 61.2%
  &__columns-right,
  &__columns-left
    @media $tablet
      width 100%
  &__boost
    display flex
    @media screen and (min-width: 769px) and (max-width: 992px)
      flex-direction column
    @media screen and (min-width: 481px) and (max-width: 768px)
      justify-content space-between
    @media $phone
      flex-direction column
  &__end
    padding-top 17px
    display flex
    @media screen and (min-width: 769px) and (max-width: 992px)
      flex-direction column
    @media screen and (min-width: 481px) and (max-width: 768px)
      justify-content space-between
    @media $phone
      flex-direction column
  &__rules,
  &__cancel
    width 50%
    @media screen and (min-width: 769px) and (max-width: 992px)
      width 100%
    @media $phone
      width 100%
  &__rules,
  &__rules-h2
    padding-left 20px
    @media screen and (min-width: 769px) and (max-width: 992px)
      padding-left 5px
    @media $phone
      padding-left 5px
  &__rules-h2
    @media screen and (min-width: 769px) and (max-width: 992px)
      padding-left 20px
    @media $phone
      padding-left 0px
  &__rules-list 
    padding-top 7px
  &__rules-item
    position relative
    padding-left 20px
    margin-top 10px
    &:before
      content ""
      position absolute 
      top 7px
      left 0px
      width: 10.43px;
      height: 10px;
      border-radius 50%
      background dark_25
  &__cancel
    padding-left 7px
    @media screen and (min-width: 769px) and (max-width: 992px)
      margin-top 20px
    @media $phone
      margin-top 20px
  &__cancel-h2
    @media screen and (min-width: 769px) and (max-width: 992px)
      padding-left 20px
  &__cancel-p
    margin-top 17px
  &__rules-item,
  &__cancel-p
    >br
      @media $laptop
        display none
.intelligence
  width 50%
  @media $laptop
    margin-bottom 25px
  @media screen and (min-width: 769px) and (max-width: 992px)
    width 100%
  @media screen and (min-width: 481px) and (max-width: 768px)
    width 50% 
  @media $phone
    width 100%
  &__list 
    max-width 280px
  &__item
    border-bottom 1px solid dark_10
    padding-bottom 6px
    display flex
    margin-top 20px
    &:last-of-type
      border-bottom none
  &__icon
    font-size 48px
    background perple-gradient
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: initial;
  &__descr
    margin-left 10px
    &-h3
      text-transform none
      font-size 14px
      margin-bottom -14px