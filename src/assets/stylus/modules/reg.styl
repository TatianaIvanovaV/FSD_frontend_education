.registred
  background url('/assets/img/background/intro-for-reg.png') -45px -70px no-repeat 
  height 684px 
  &__wrap
    padding-top 19px
  &__window
    margin 0 auto
    padding 40px 30px 0
    background white
    border-radius 4px
    width 380px
    height 646px
    border 1px solid rgba(0, 0, 0, 0.12)
    box-shadow 0px 0px 25px 0px #000000 20% 
  &__h1
    margin-bottom 20px
  &__input
    &-name, 
    &-surname,
    &-mail
      margin-bottom 10px
    &-gender
      padding 0
      margin-bottom 19px
    &-birthday
      margin-bottom 16px
    

.radio
  display flex
  align-items flex-start
  &__label 
    margin -3px 20px 0 10px
  &__input
    appearance none
    border-radius 50%
    cursor pointer
    width 20px
    height 20px
    border: 1px solid dark_25
    transition 0.2s all linear
    &:checked
      border: solid 1px perple
      background perple-gradient
      background-origin border-box
      background-clip content-box, border-box
      box-shadow 0px 0px 0px 3px #fff inset
      & + .radio__label
        color dark_75
  
.checkbox
  &__label
    position: relative;
    width: 60px;
    height: 34px;
  &__input
    display none
  &__round
    position: absolute;
    cursor: pointer;
    border-radius: 34px;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: .4s;
    &:before 
      position: absolute;
      content: "";
      height: 26px;
      width: 26px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      -webkit-transition: .4s;
      transition: .4s
      border-radius: 50%;
  &__input:checked + .round 
      background-color: #2196F3;
  &__input:focus + .round 
      box-shadow: 0 0 1px #2196F3;
  &__input:checked + .round:before 
      transform: translateX(26px);