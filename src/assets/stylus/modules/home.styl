.intro
  background url('/assets/img/background/intro-main.png') no-repeat 
  background-position center
  background-size cover
  height 830px
  &__content
    padding-top 70px
    height 830px
    position relative
  &__booking-form
    height 374px
    width 380px
    border-radius 4px
    background white
    box-shadow 0 0 25px rgba(0,0,0,.2)
    border 1px solid rgba(0, 0, 0, 0.12)
    padding 40px 30px 0
  &__h1
    margin-bottom 16px 
  &__block
    &-date
      display flex
      justify-content space-between
      margin-bottom 17px
    &-guests
      margin-bottom 30px
  &__input
    &--guests
    &--date
      &::placeholder
        color dark_75 
    &--date
      width 150px
  &__subtitle
    position absolute
    bottom 20px
    right -7px
    text-align right 
    color dark_75