.catalog
  border-bottom 1px solid dark_25
  &__wrap
    display flex
    @media $phone
      flex-direction column
  &__filter
    width 350px
    @media $phone
      width 100%
  &__rooms
    width 100%
.filter
  padding-top 26px
  @media $phone
    padding-top 0
  &__wrapper
    @media $phone
      display none
  &__wrapper--visible
    @media $phone
      display block
  &__button
    border none
    width 40px
    height 40px
    margin 10px auto
    @media screen and (min-width: 481px)
      display none
  &__icon
    font-size 18px
  &__date
    margin-bottom 16px
  &__guests
    margin-bottom 26px
  &__range
    font-size 12px
    margin-bottom 20px
  &__range-title
    display flex
    justify-content space-between
    margin-bottom 18px
  &__range-subtitle
    margin-top 10px
  &__rules
    margin-bottom 28px
  &__rules-h3,
  &__rules-item
    margin-bottom 12px
  &__rules-item
    line-height 18px
  &__access
    margin-bottom 25px
  &__access-h3
    margin-bottom 12px
  &__access-item
    margin-bottom 10px
  &__access-title
    font-size 14px
    text-transform none
    margin-top -2px
    color dark_75
  &__access-sublabel
    margin-top 2px
    margin-bottom 0px
    line-height 14px
    font-size 12px
  &__value
    margin-bottom 27px
  &__input--value
    border-radius 4px 4px 0 0  
  &__add-details[open] summary::after 
    transform rotate(-180deg)
    transition .2s
  &__add-summary
    list-style none
    display: flex;
    justify-content space-between
    align-items: center;
    cursor: pointer;
    margin-bottom 10px
    &::after
      content: '\e313';
      font-family: 'Material Icons';
      font-size 24px
      margin-right 9px
    &::-webkit-details-marker
      display: none
    &:hover,
    &:active,
    &:focus
      outline none
  &__add-item
    margin-bottom 6.3px
#unconstrained
  height 6px
  border 1px solid dark_25 
.noUi-target,
.noUi-handle
  box-shadow none
.noUi-horizontal .noUi-handle
  height 16px
  width 16px
  background green-gradient
  border 2px solid white
  border-radius 50%
  margin-right 10px
  padding-top 2px
  cursor pointer
  &:hover,
  &:active,
  &:focus
    outline none
  &::before,
  &::after
    display none
.noUi-connect
    background green-gradient
.rooms
  padding 30px 0 0 60px
  @media $phone
    padding 0
  @media screen and (min-width: 481px) and (max-width: 992px)
    padding 20px 0 0 10px
  &__h1
    @media $laptop
      text-align center
    >.quicksand
      font-family font-Quicksand 
  &__list
    display flex
    justify-content space-between
    margin-top 20px
    flex-wrap wrap
    @media screen and (min-width: 540px) and (max-width: 833px)
      justify-content center
  &__card
    position relative
    width 270px
    height 258px
    box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
    border-radius 4px
    margin-bottom 20px
    overflow hidden
    @media $phone
      width 100%
    >.slick-dotted.slick-slider
      margin-bottom 0
  &__photos
    height 151px
    overflow hidden
    >.slick-prev
      left 0px 
      &::before
        content: '\e314'
    >.slick-next 
      right 0px
      &::before
        content: '\e315'
        color transparent
    &:hover,
    &:active,
    &:focus
      >.slick-prev,
      .slick-next 
        position: absolute;
        top: 50%
        z-index 2
        cursor: pointer;
        width 42px
        height 100%
        &::before
          font-family 'Material Icons'
          opacity 1
          color white
      &::before,
      &::after
        content ""
        position absolute
        top 0
        z-index 1
        width 42px
        height 100%
        background: linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 99.99%, rgba(255, 255, 255, 0) 100%)
        transition 0.3s
      &::after
        right 0
        transform: matrix(-1, 0, 0, 1, 0, 0);
      &::before
        left 0
    >.slick-dots 
      bottom 15px 
      text-align: end
      padding-right 16px
      & li 
        width 1px
        height 1px
        paddind-left 4px
        z-index 4
        & button
          padding 0px
          width 0
          height 0
          &:before 
            width 7.5px
            height 7.5px
            border-radius 50%
            top: 0;
            left: 0;
            width 7.5px
            height 7.5px
            content: '';
            border 1px solid white 
            opacity: 1;
        &.slick-active button:before
          background white
          box-shadow: 0px 5px 5px rgba(31, 32, 65, 0.3)
          opacity: 1;
  &__details
    &--wrap
      margin 6px 20px 0
  &__value,
  &__rating
    display flex
    justify-content space-between
    align-items center
  &__rating
    border-top 1px solid dark_10
  &__appartment
    font-family font-Montserrat
    color dark_100
    font-size 14px
    font-weight 700
    text-transform: uppercase
  &__appartment,
  &__cost
    margin-bottom 8px
  &__num
    font-family font-Quicksand
    font-size 19px
    margin-right 5px
  &__status
    color perple
    font-size: 12px;
  &__cost 
    font-family font-Montserrat 
    font-size: 12px;
    color dark_50
    margin-right -3px
    padding-top 2px
  &__price
    font-size: 14px;
    font-weight 700
  &__reviews
    color dark_50
    margin-right -1px
    margin-top 9px
    &-amount
      font-weight 700
  &__paginator
    padding 20px 0 58px
    display flex
    justify-content center
    text-align center
.stars-rating
  background perple-gradient
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: initial;
.paginator
  padding-right 13px
  &__list
    display flex
    font-size 12px
  &__page
    display flex
    align-items center
    justify-content center
    height 40px
    width 40px
    border-radius 50%
    &--active
      background perple-gradient  
      color white
      font-weight: 700
    &--inactive
      &:hover
        transition .3s
        border 1px solid perple
  &__arrow
    background green-gradient  
    color white
  &__caption 
    font-size 14px
    color dark_75
    margin-top 8px