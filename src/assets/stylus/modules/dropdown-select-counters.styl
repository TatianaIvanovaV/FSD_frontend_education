.dropdown
  position absolute
  z-index 99
  width 100%
  border 1px solid dark_50 
  border-top none 
  border-radius 0 0 4px 4px 
  padding 6px 5px 0 14px
  margin-top 0px
  color dark_100
  font-size 12px
  font-weight 700
  text-transform uppercase
  box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
  background white
  display none
  &__item
    display flex 
    justify-content space-between
    align-items: center;
    margin-bottom 7px
  &__counter
    display flex 
    justify-content space-between
    align-items: center;
    cursor pointer
    width 92px
  &__select-count-btn
    border 1px solid dark_50
    border-radius 50%
    width 30px
    height 30px
    font-size 18px
    color dark_50
    font-weight 400
    text-align center
    padding-top 3px
    background transparent
    &:hover,
    &:active,
    &:focus
      color perple
      border 1px solid perple
      opacity 1
    &[disabled]
      color dark_25
      border 1px solid dark_25
  &__footer
    display flex 
    justify-content space-between
    margin 17px 0 5px
  &__button-clear,
  &__button-apply
    font-size 12px
    font-weight 700
    text-transform uppercase
    color perple
    border none 
    outline none 
    cursor pointer
    background transparent 
    padding 0
  &__buttons--hide
    & button
      color transparent
      pointer-events: none;