.dropdown
  width 100%
  border 1px solid dark_50 
  border-top none 
  border-radius 0 0 4px 4px 
  padding 6px 5px 0 14px
  margin-top 0px
  color dark_100
  font-size 12px
  font-weight 700
  text-transform uppercase
  box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
  background white
  &__item
    display flex 
    justify-content space-between
    align-items: center;
    margin-bottom 7px
  &__counter
    display flex 
    justify-content space-between
    align-items: center;
    cursor pointer
    width 92px
  &__decrement,
  &__increment
    border 1px solid dark_25
    border-radius 50%
    width 30px
    height 30px
    font-size 18px
    color dark_50
    font-weight 400
    text-align center
    padding-top 3px
  &__footer
    display flex 
    justify-content space-between
    margin 17px 0 5px
  &__button-clear,
  &__button-apply
    font-size 12px
    font-weight 700
    text-transform uppercase
    color perple
    border none 
    outline none 
    cursor pointer
    background transparent 
    padding 0
