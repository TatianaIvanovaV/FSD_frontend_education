.catalog
  border-bottom 1px solid dark_25
  &__wrap
    display flex
    @media $phone
      flex-direction column
  &__filter
    width 350px
    @media $phone
      width 100%  
.filter
  padding-top 26px
  @media $phone
    padding-top 0
  &__wrapper
    @media $phone
      display none
  &__wrapper--visible
    @media $phone
      display block
  &__button
    border none
    width 40px
    height 40px
    margin 10px auto
    @media screen and (min-width: 481px)
      display none
  &__icon
    font-size 18px
  &__date
    margin-bottom 16px
  &__guests
    margin-bottom 26px
  &__range
    margin-bottom 20px
  &__rules
    margin-bottom 28px
  &__rules-h3,
  &__rules-item
    margin-bottom 12px
  &__rules-item
    line-height 18px
  &__access
    margin-bottom 25px
  &__access-h3
    margin-bottom 12px
  &__access-item
    margin-bottom 10px
  &__access-title
    font-size 14px
    text-transform none
    margin-top -2px
    color dark_75
  &__access-sublabel
    margin-top 2px
    margin-bottom 0px
    line-height 14px
    font-size 12px
  &__value
    margin-bottom 27px
  &__input--value
    border-radius 4px 4px 0 0  
  &__add-details[open] summary::after 
    transform rotate(-180deg)
    transition .3s
  &__add-summary
    list-style none
    display: flex;
    justify-content space-between
    align-items: center;
    cursor: pointer;
    margin-bottom 10px
    &::after
      content: '\e313';
      font-family: 'Material Icons';
      font-size 24px
      margin-right 9px
      transition .3s
    &::-webkit-details-marker
      display: none
    &:hover,
    &:active,
    &:focus
      outline none
  &__add-item
    margin-bottom 6.3px