.catalog
  border-bottom 1px solid dark_25
  &__wrap
    display flex
    @media $phone
      flex-direction column
  &__filter
    width 350px
    @media $phone
      width 100%  
.filter
  padding-top 26px
  @media $phone
    padding-top 0
  &__wrapper
    @media $phone
      display none
  &__wrapper--visible
    @media $phone
      display block
  &__button
    border none
    width 40px
    height 40px
    margin 10px auto
    @media screen and (min-width: 481px)
      display none
  &__icon
    font-size 18px
  &__date
    margin-bottom 16px
  &__guests
    margin-bottom 26px
  &__range
    margin-bottom 20px
  &__rules
    margin-bottom 28px
  &__access
    margin-bottom 25px
    & .checkbox .checkbox__h3
      margin-bottom 16px !important
  &__value
    margin-bottom 27px 