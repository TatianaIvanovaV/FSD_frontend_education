mixin declOfNum(number, words)  
  = words[(number % 100 > 4 && number % 100 < 20) ? 2 : [2, 0, 1, 1, 1, 2][(number % 10 < 5) ? number % 10: 5]] 

mixin hint(text)
  .hint 
    span.hint__inner i
    .hint__buble= text