extends ../layout/index.pug

block content
  include ../includes/modules/header.pug
  
  main.main
    .intro
      .container
        .intro__content
          .intro__booking-form
            h1.intro__h1 Найдём номера под ваши пожелания
            form.intro__form(action="" method="")
              .intro__block-date
                +dataInput("прибытие", "ДД.ММ.ГГГГ", "date-arrival", "intro__input--date")
                +dataInput("выезд", "ДД.ММ.ГГГГ","date-departure", "intro__input--date")
              .intro__block-guests
                +dataInput("гости", "Сколько гостей","guests","intro__input--guests")
              .intro__select-btn.btn
                a.intro__link(href="/") подобрать номер
                  i.material-icons.intro__icon-arrow arrow_forward
          .intro__subtitle Лучшие номера для вашей работы,<br> отдыха и просто вдохновения  
  include ../includes/modules/footer.pug