extends ../layout/index.pug

block content
  include ../includes/modules/header.pug
  
  main.main
    .intro
      .container
        .intro__content
          .intro__booking-form
            h1.intro__h1 Найдём номера под ваши пожелания
            form.intro__form(action="" method="")
              .intro__block-date
                +dataInput("прибытие", "ДД.ММ.ГГГГ", "input-dropdown", "intro__input--date")
                +dataInput("выезд", "ДД.ММ.ГГГГ","input-dropdown", "intro__input--date")
              .intro__block-guests
                +dataInput("гости", "Сколько гостей","input-dropdown","intro__input--guests")
              +buttons("btn--arrow", "подобрать номер", "rooms-filter.html") 
          .intro__subtitle Лучшие номера для вашей работы,<br> отдыха и просто вдохновения  
  include ../includes/modules/footer.pug